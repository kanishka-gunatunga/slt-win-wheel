generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Wheel {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  isEnabled Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  segments  Segment[]
  winLogs   WinLog[]
}

model Segment {
  id          String   @id @default(uuid())
  label       String
  color       String
  stock       Int
  probability Float
  imageUrl    String?
  wheelId     String?
  wheel       Wheel?   @relation(fields: [wheelId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WinLog {
  id            String   @id @default(uuid())
  segmentId     String
  wheelId       String?
  wheel         Wheel?   @relation(fields: [wheelId], references: [id])
  wonAt         DateTime @default(now())
  winnerName    String?
  winnerPhone   String?
  winnerAddress String?
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model SystemSetting {
  key   String @id
  value String
}
