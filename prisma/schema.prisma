generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Segment {
  id          String   @id @default(uuid())
  label       String
  color       String
  stock       Int
  probability Float
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WinLog {
  id        String   @id @default(uuid())
  segmentId String
  wonAt         DateTime @default(now())
  winnerName    String?
  winnerPhone   String?
  winnerAddress String?
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}
